{% extends 'base.html.twig' %}

{% block title %}Hello TicketController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<table class="table table-bordered" style="width:20%; margin-left: 60px;;">
    <thead>
        <tr class="table-info">
            <th>Tickets :</th>
        </tr>
    </thead>
    <tbody>
        {% for ticket in ticket %}
        <tr>
            <th style="text-align: center;"> <a href="{{path('ticket_show', {'id':ticket.id})}}">{{ticket.question}}</a></th> 
            <th style="text-align: center;"> {{ticket.response}}</th> 
            <th style="text-align: center;"> <a href="{{path('ticket_edit', {'id':ticket.id})}}" class="btn btn-outline-warning btn-sm float mr-2">Modifier</a></th> 
            <th style="text-align: center;"> <a href="{{path('ticket_delete', {'id':ticket.id})}}" class="btn btn-outline-danger btn-sm float-right mr-2">Supprimer</a></th>                                       
                                      
        </tr>
        {% endfor %} 
        </tbody>
</table>

{% endblock %}
